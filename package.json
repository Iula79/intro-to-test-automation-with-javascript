{
  "name": "testmart",
  "version": "1.0.0",
  "description": "testmart is a trivial shopping cart library created for teaching purposes",
  "main": "src/server/server.js",
  "scripts": {
    "start": "DEBUG=api nodemon --harmony ./src/backend/bin/www",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit-watch": "mocha --require babel-core/register --watch --watch-extensions js test/unit/**/*.test.js",
    "test-unit": "mocha --require babel-core/register test/unit/**/*.test.js",
    "test-integration": "mocha --require babel-core/register test/integration/**/*.test.js",
    "test-samples": "mocha --require babel-core/register test/samples/**/*.test.js",
    "docs": "rm -rf ./docs ; npx documentation build src/domain/index.js -f html -o ./docs"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "./test/integration/jest.setup.js"
    ]
  },
  "author": "Lasse Koskela",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "babel-core": "^6.26.3",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "jest": "^25.1.0",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
